<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Configure logging level in the level attribute ... debug,info,error -->
    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>